<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_nav">

    <action
        android:id="@+id/openHome"
        app:destination="@id/home_nav" />
    <action
        android:id="@+id/openCart"
        app:destination="@id/cart_nav" />
    <fragment
        android:id="@+id/home_nav"
        android:name="com.example.ditest.ui.home.products.ProductsFragment"
        android:label="products_fragment"
        tools:layout="@layout/products_fragment" />

    <fragment
        android:id="@+id/cart_nav"
        android:name="com.example.ditest.ui.home.cart.CartFragment"
        android:label="cart_fragment"
        tools:layout="@layout/cart_fragment" />


</navigation>